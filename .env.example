# Vercel Environment Variables
# Copy this file to .env.local for local development
# Add these to your Vercel project settings for production

# Typeform Configuration
VITE_TYPEFORM_ID=01KARGCADMYDCG24PA4FWVKZJ2

# Google Analytics
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Microsoft Clarity (gratis heatmaps & session recording)
# Krijg je project ID op: https://clarity.microsoft.com
VITE_CLARITY_PROJECT_ID=your_clarity_project_id

# Google Ads Remarketing (conversie tracking)
# Krijg je Conversion ID op: https://ads.google.com
VITE_GOOGLE_ADS_ID=AW-XXXXXXXXX
VITE_GOOGLE_ADS_FORM_LABEL=your_form_conversion_label
VITE_GOOGLE_ADS_START_LABEL=your_start_conversion_label
VITE_GOOGLE_ADS_COMPLETE_LABEL=your_complete_conversion_label

# API Configuration
VITE_API_ENDPOINT=https://recruitmentapk.nl/api

# Pipedrive Integration
PIPEDRIVE_API_TOKEN=your_pipedrive_token_here
PIPEDRIVE_API_URL=https://api.pipedrive.com/v1

# Email Configuration (voor submit_assessment.php)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=info@recruitin.nl
SMTP_PASSWORD=your_email_password_here
SMTP_FROM=info@recruitin.nl
SMTP_TO=info@recruitin.nl

# Vercel Analytics (automatisch beschikbaar in Vercel)
# VERCEL_ANALYTICS_ID - automatic
# VERCEL_ENV - automatic (production, preview, development)
# VERCEL_URL - automatic

# Email Automation (Mailchimp, ActiveCampaign, HubSpot, ConvertKit, Brevo)
# Kies je provider: mailchimp | activecampaign | hubspot | convertkit | brevo
VITE_EMAIL_PROVIDER=mailchimp
VITE_EMAIL_API_KEY=your_email_api_key
VITE_EMAIL_LIST_ID=your_list_id
VITE_EMAIL_AUTOMATION_ID=your_automation_id
VITE_EMAIL_API_URL=https://us1.api.mailchimp.com/3.0

# Feature Flags
VITE_ENABLE_SOCIAL_PROOF=true
VITE_ENABLE_ANALYTICS=true

# Deployment
NODE_ENV=production
